<div data-hook="toolbar" class="toolbar">
  <ul class="actions">
    <li id="new_product_link">
      <%= button_link_to "New article", new_admin_article_path, {:remote => true, :icon => 'add', :id => 'admin_new_article'} %>
    </li>
  </ul>
  <br class="clear">
</div>

<h1>Listing articles</h1>

<div id="new_article"></div>

<table class="index">
  <tr>
    <th><%= t('activerecord.attributes.article.name') %></th>
    <th><%= t('activerecord.attributes.article_category.name') %></th>
    <th><%= t('activerecord.attributes.article.products') %></th>
    <th class="tc"><%= t('scaffold.actions') %></th>
  </tr>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.name %></td>
      <td><%= article.article_category.name %></td>
      <td>
        <% article.products.each do |product| %>
        <span><%= product.name %>, </span>
        <% end %>
      </td>
      <td class="actions">
        <%= link_to_edit article, :class => "edit" %>
        <%= link_to_delete article %>
      </td>
    </tr>
  <% end %>
</table>
